<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Beverages - Grocery Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .product-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
      }

      .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
      }

     
      .product-card img {
        width: 100%; 
        height: 200px; 
        object-fit: cover;
        transition: all 0.3s ease;
      }

      .product-card:hover img {
        transform: scale(1.05); /* Slightly enlarge the image on hover */
      }

      .product-card h5 {
        font-size: 1.2rem;
        color: #333;
        margin: 15px 0;
      }

      .product-card p {
        color: #777;
        font-size: 1rem;
        margin-bottom: 15px;
      }

      .product-card button {
        background-color: #26b918;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      .product-card button:hover {
        background-color: #ff4b3a;
      }

      .search-bar {
        position: relative;
        width: 100%;
        margin-top: 150px;
      }
      .search-bar input {
        width: 100%;
        padding: 10px;
        padding-left: 40px;
        border-radius: 25px;
        border: 1px solid #ced4da;
      }
      .search-bar .fa-search {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
      }

      .price {
        font-size: 1.2rem;
        color: #28a745;
        font-weight: bold;
        margin-top: 10px;
        text-align: center;
      }

      .col-md-3 {
        margin-bottom: 30px;
      }
    </style>
  </head>
  <body>
    <%- include('./common/header.ejs')%>
    <!-- Search Bar Section -->
    <div class="container mt-5">
      <div class="row">
        <div class="col-12 col-md-6 mx-auto">
          <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" class="form-control" placeholder="Search here...">
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <h2 class="text-center mt-5">Browse Beverages</h2>
      <div class="row mt-5">
        <!-- Product Cards -->
        <div class="col-md-3">
          <div class="product-card">
            <img src="image/apple_juice.jpeg" alt="Apple Juice" class="img-fluid mb-3" />
            <h5 class="text-center">Apple Juice</h5>
            <p class="price">₹150/bottle</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/orange_juice.jpeg" alt="Orange Juice" class="img-fluid mb-3" />
            <h5 class="text-center">Orange Juice</h5>
            <p class="price">₹120/bottle</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/lemonade.jpeg" alt="Lemonade" class="img-fluid mb-3" />
            <h5 class="text-center">Lemonade</h5>
            <p class="price">₹80/glass</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/pineapple_juice.jpeg" alt="Pineapple Juice" class="img-fluid mb-3" />
            <h5 class="text-center">Pineapple Juice</h5>
            <p class="price">₹160/bottle</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/coconut_water.jpeg" alt="Coconut Water" class="img-fluid mb-3" />
            <h5 class="text-center">Coconut Water</h5>
            <p class="price">₹50/coconut</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/coca.jpeg" alt="Mango Lassi" class="img-fluid mb-3" />
            <h5 class="text-center">Mango Lassi</h5>
            <p class="price">₹100/cup</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/cold_coffee.jpeg" alt="Cold Coffee" class="img-fluid mb-3" />
            <h5 class="text-center">Cold Coffee</h5>
            <p class="price">₹120/cup</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/pepsi.jpeg" alt="Pepsi" class="img-fluid mb-3" />
            <h5 class="text-center">Pepsi</h5>
            <p class="price">₹70/cane</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/redbull.jpeg" alt="Red Bull" class="img-fluid mb-3" />
            <h5 class="text-center">Red Bull</h5>
            <p class="price">₹140/bottle</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>

        <div class="col-md-3">
          <div class="product-card">
            <img src="image/sprite.jpeg" alt="Sprite" class="img-fluid mb-3" />
            <h5 class="text-center">Sprite</h5>
            <p class="price">₹90/750ml</p>
            <button class="btn">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('./common/footer.ejs')%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
